<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/assembly</directory>
            <outputDirectory />
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/zip-staging</directory>
            <outputDirectory />
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>target</directory>
            <outputDirectory>war</outputDirectory>
            <includes>
                <include>*.war</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
